@model BookDownloader.ViewModels.PagerViewModel
<nav aria-label="...">
    <ul class="pagination">
        @if (Model.Pervious)
        {
            <li class="page-item">
                <a class="page-link" asp-action="index" asp-route-pageNumber="@(Model.PageNumber-1)" tabindex="-1" aria-disabled="true">Previous</a>
            </li>
        }
        else
        {
            <li class="page-item disabled">
                <a class="page-link" href="#" tabindex="-1" aria-disabled="true">Previous</a>
            </li>
        }
        @for (int i = Model.StartPoint; i < @Model.PageNumber + 5 && i < Model.TotalPages + 1; i++)
        {
            if (Model.PageNumber == i)
            {
                <li class="page-item active"><a class="page-link" asp-action="index" asp-route-pageNumber="@i">@(i + 1)</a></li>
            }
            else
            {
                <li class="page-item"><a class="page-link" asp-action="index" asp-route-pageNumber="@i">@(i + 1)</a></li>
            }
        }


        @if (Model.Next)
        {
            <li class="page-item">
                <a class="page-link" asp-action="index" asp-route-pageNumber="@(Model.PageNumber+1)">Next</a>
            </li>
        }
        else
        {
            <li class="page-item disabled ">
                <a class="page-link" href="#">Next</a>
            </li>
        }
    </ul>
</nav>